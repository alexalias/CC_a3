    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show"
        android:id="@+id/btnShow"

        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/linearLayout"
        android:layout_alignEnd="@+id/linearLayout" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/linearLayout"
        android:layout_toLeftOf="@+id/btnShow"
        android:layout_toRightOf="@+id/btnStartTracking"
        android:layout_toEndOf="@+id/btnStartTracking" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton"
        android:layout_alignBottom="@+id/btnStopTracking"
        android:layout_centerHorizontal="true"
        android:clickable="false"
        android:singleLine="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btnShow"
        android:layout_above="@+id/radioButton"
        android:id="@+id/linearLayout">

        <com.esri.android.map.MapView
            android:id="@+id/map"
            android:layout_width="fill_parent"
            android:layout_height="389dp"
            mapoptions.MapType="Streets"
            mapoptions.center="53.551085, 9.993682"
            mapoptions.ZoomLevel="16">
        </com.esri.android.map.MapView>

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listView"
            android:layout_toStartOf="@+id/radioButton"
            android:layout_above="@+id/radioButton"
            android:layout_alignRight="@+id/btnStopTracking"
            android:layout_alignEnd="@+id/btnStopTracking"
            android:layout_toLeftOf="@+id/radioButton" />
    </LinearLayout>


